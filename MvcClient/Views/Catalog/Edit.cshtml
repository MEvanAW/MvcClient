@using MvcClient.Views.Shared
@model MvcClient.Dtos.Catalog.CatalogEditDto

@{
    ViewData["Title"] = "Edit Catalog";
}

<h1>Edit Catalog</h1>
<h4>Please fill the following form.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="id" value="@Model.Id"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="@Model.Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" value="@Model.Description"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" value="@Model.Price"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PictureFileName" class="control-label"></label>
                <input asp-for="PictureFileName" class="form-control" value="@Model.PictureFileName"/>
                <span asp-validation-for="PictureFileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PictureUri" class="control-label"></label>
                <input asp-for="PictureUri" class="form-control" value="@Model.PictureUri"/>
                <span asp-validation-for="PictureUri" class="text-danger"></span>
            </div>
            <component type="typeof(BrandType)" render-mode="ServerPrerendered" param-BrandId="Model.CatalogBrandId" param-TypeId="Model.CatalogTypeId"/>
            <div class="form-group">
                <label asp-for="AvailableStock" class="control-label"></label>
                <input asp-for="AvailableStock" class="form-control" value="@Model.AvailableStock"/>
                <span asp-validation-for="AvailableStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestockThreshold" class="control-label"></label>
                <input asp-for="RestockThreshold" class="form-control" value="@Model.RestockThreshold"/>
                <span asp-validation-for="RestockThreshold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxStockThreshold" class="control-label"></label>
                <input asp-for="MaxStockThreshold" class="form-control" value="@Model.MaxStockThreshold"/>
                <span asp-validation-for="MaxStockThreshold" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    @if (Model.OnReorder)
                    {
                        <input class="form-check-input" asp-for="OnReorder" checked/>
                    }
                    else
                    {
                        <input class="form-check-input" asp-for="OnReorder" />
                    }
                    @Html.DisplayNameFor(model => model.OnReorder)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    @if (Model.IsHidden)
                    {
                        <input class="form-check-input" asp-for="IsHidden" checked />
                    }
                    else
                    {
                        <input class="form-check-input" asp-for="IsHidden" />
                    }
                    @Html.DisplayNameFor(model => model.IsHidden)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
